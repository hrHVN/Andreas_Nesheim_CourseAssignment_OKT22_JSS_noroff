<%- include('./utility/header.ejs') %>

<title>
    <%= title %>
</title>
</head>

<body>

    <%- include('./utility/navigation.ejs') %>

    <section class="card">

        <% memes.forEach(m=> { %>
            <div class="row g-0">
                <div class="col-md-4">
                    <img class="img-fluid" src=<%=m.url %> alt=<%= m.name %>>
                </div>
                <% //if (user) { %>

                    <div class="col-md-4 droppdown-menu">
                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse<%= m.id %>" aria-expanded="false"
                            aria-controls="collapse<%= m.id %>">Details</button>
                            
                            <section class="collapse text-bg-info" id="collapse<%= m.id %>">
                                <div class="card-body">
                                    <h5 class="car-title">
                                        <%= m.name %>
                                    </h5>
                                    <p class="card-text">
                                        <small class="text-body-secondary">URL: <%= m.url %></small>
                                    </p>
                                    <p class="card-text">
                                        ID: <%= m.id %>
                                    </p>
                                    <p class="card-text">
                                        HEIGHT: <%= m.Height %>
                                        WIDTH: <%= m.width %>
                                    </p>
                                </div>
                            </section>
                    </div>
                <% //} %>
            </div>
        <% }) %>

    </section>

<%- include('./utility/footer.ejs') %>